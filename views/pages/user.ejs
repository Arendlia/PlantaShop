<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main class="main">
    <div class="main_head">
        <div class="icon-logout">
            <a href="/login">
            <i class="fa-solid fa-arrow-right-from-bracket fa-xl"></i>
            </a>
        </div>
        <a href="/">
            <img src="img/logo.png" alt="">
        </a>
        <div class="icon-hopital">
            <i class="fa-sharp fa-solid fa-user-nurse fa-xl"></i>
        </div>
    </div>

    <h2 class="title_user_page">Your profile</h2>
    <div class="containerAccordion">
    <div class="list">
        <input type="checkbox" id="switch" class="switch">
        <div class="nav">
          <span>Profile Info</span>
          <label for="switch">
            <i class="fas fa-angle-down"></i>
          </label>
        </div>
        <div class="form-list">
            <form method="post">
                <div class="txt_field_list">
                  <input type="text" required />
                  <span></span>
                  <label>Username</label>
                </div>
                <div class="txt_field_list">
                  <input type="password" required />
                  <span></span>
                  <label>Lastname</label>
                </div>
                <div class="txt_field_list">
                  <input type="text" required />
                  <span></span>
                  <label>Firstname</label>
                </div>
                <div class="txt_field_list">
                  <input type="password" required />
                  <span></span>
                  <label>Email</label>
                </div>
            </form>
        </div>
        <div class="list">
          <input type="checkbox" id="switch2" class="switch2">
          <div class="nav">
            <span>Payment & Card</span>
            <label for="switch2">
              <i class="fas fa-angle-down"></i>
            </label>
          </div>
          <div class="form-list">
              <form method="post">
                  <div class="txt_field_list">
                    <input type="text" required />
                    <span></span>
                    <label>Card number</label>
                  </div>
                  <div class="txt_field_list">
                    <input type="password" required />
                    <span></span>
                    <label>Expiration Date</label>
                  </div>
                  <div class="txt_field_list">
                    <input type="password" required />
                    <span></span>
                    <label>CVV</label>
                  </div>
              </form>
          </div>
          <button class="btn-save">Save Information</button>
    </div>


    <div class="suggest">
      <h2 class="suggest_title">Your plants</h2>
      <div class="slider">
          <div class="slider__viewport">
              <div class="slider__container">
                <% user.plants.forEach( plant => { %>
                  <div class="slider__slide">
                      <div class="slider__card">
                          <div class="slider__card_content">
                              <div class="info">
                                  <h2><%= plant.name %></h2>
                                  <p><%= plant.description %></p>
                              </div>
                              <div class="img">
                                  <img src="/images/products/userplant.png" alt="">
                              </div>
                          </div>
                        </div>
                  </div>
                  <% }) %>
              </div>
          </div>
      </div>
  </div>

    
    </div>
    </div>
    
  <div class="form_list_user">
    <form method="post" action="/user">
        <div class="txt_field_list">
          <input type="text" name="name" />
          <span></span>
          <label>Name</label>
        </div>
        <div class="txt_field_list">
          <input type="text" name="description" />
          <span></span>
          <label>Description</label>
        </div>
        <button type="submit" class="btn-save">Add plant</button>
    </form>
</div>

</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>